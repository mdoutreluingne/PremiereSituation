<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfComptabilite"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WpfComptabilite.ConnexionWindow"
        mc:Ignorable="d"
        Title="ConnexionWindow" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF4AD698" Offset="0"/>
            <GradientStop Color="#FF423E3E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="btn_connecter" Content="SE CONNECTER" BorderThickness="3" BorderBrush="#FF6C6969" Background="#FF74AC93" Margin="285,306,0,0" VerticalAlignment="Top" Width="215" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Click="connecter_Click" FontFamily="Segoe UI Semibold" FontSize="14" Foreground="White"/>
        <Button x:Name="btn_update" Content="Modifier" Margin="285,294,0,0" BorderThickness="3" BorderBrush="#FF6C6969" Background="#FF74AC93" VerticalAlignment="Top" Width="215" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Click="btn_update_Click" Visibility="Hidden" Foreground="White"/>
        <Button x:Name="btn_modif_pass" Content="CHANGER SON MOT DE PASSE" BorderThickness="3" BorderBrush="#FF6C6969" Background="#FF74AC93" HorizontalAlignment="Left" Margin="285,358,0,0" VerticalAlignment="Top" Width="215" Height="34" Click="btn_modif_pass_Click" FontFamily="Segoe UI Semibold" FontSize="14" Foreground="White"/>
        <ComboBox  x:Name="cmb_ville" VerticalAlignment="Top" Width="179" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="211,138,0,0" Height="28" FontFamily="Segoe UI Semibold" FontSize="14">
            <System:String>Annecy-</System:String>
            <System:String>Thonon-</System:String>
            <System:String>Bonneville-</System:String>
            <System:String>Chamonix-</System:String>
        </ComboBox>
        <PasswordBox x:Name="pass" PasswordChar="*" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Width="179" Margin="390,196,0,0" FontFamily="Segoe UI Semibold" FontSize="14"/>
        <PasswordBox x:Name="pass_confirm" PasswordChar="*" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="32" Width="179" Margin="390,257,0,0" FontFamily="Segoe UI Semibold" FontSize="14" Visibility="Hidden"/>
        <TextBox x:Name="txt_login" Height="30" TextWrapping="Wrap" Text="" Width="179" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="390,138,0,0" FontFamily="Segoe UI Semibold" FontSize="14"/>
        <Label Content="Connexion" HorizontalAlignment="Left" Margin="0,34,0,0" VerticalAlignment="Top" Width="792" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontFamily="Segoe UI Semibold" Foreground="White"/>
        <Label Content="Login :" HorizontalAlignment="Left" Margin="390,112,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Bold" Foreground="White"/>
        <Label Content="Mot de passe :" HorizontalAlignment="Left" Margin="390,168,0,0" VerticalAlignment="Top" Width="179" FontStyle="Italic" FontWeight="Bold" Foreground="White"/>
        <Label x:Name="lbl_comfirm_pass" Content="Confirmation mot de passe :" HorizontalAlignment="Left" Margin="390,231,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Bold" Width="179" Visibility="Hidden" Foreground="White"/>
    </Grid>
</Window>
