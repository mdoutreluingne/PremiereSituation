                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF474545" Offset="0.02"/>
                        <GradientStop Color="#FE616161"/>
                    </LinearGradientBrush>
                </ComboBox.Background>

            </ComboBox>
        </Grid>


